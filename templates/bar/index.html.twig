{% extends 'base.html.twig' %}

{% block body %}
    <h2>Dernières bières</h2>
    <div class="row">

        {% for beer in beers %}
            {% include 'partials/beer-card.html.twig' with {'beer': beer} %}
        {% endfor %}
    </div>

    <hr class="border mt-5 mb-5 w-100">

    <h2>Les pays</h2>
    <div class="row">
        {% for country in countries %}
            <div class="col-sm-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ country.name }}</h5>
                        <p class="card-text">
                            <ul>
                                <li>Adresse: {{ country.adresse }}</li>
                                <li>Email: {{ country.email }}</li>
                            </ul>
                        </p>
                        <a href="{{ path('country_beer', {id: country.id}) }}" class="btn btn-primary">Voir la page pays</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
